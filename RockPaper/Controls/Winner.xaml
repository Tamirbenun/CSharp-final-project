<UserControl x:Class="RockPaper.Controls.Winner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RockPaper.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="700">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBlock Name="WinDisplayText" FontSize="40" Foreground="#7C29EB" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal">
                <Button Name="ButtonPlayAgain" Width="110" Content="Play Again" FontSize="20" Foreground="White" Background="#7C29EB" BorderBrush="{x:Null}" Click="Button_PlayAgain" Margin="0,0,10,0"/>
                <Button Name="ButtonPlayNewGame" Width="110" Content="New Game" FontSize="20" Foreground="White" Background="#7C29EB" BorderBrush="{x:Null}" Click="Button_PlayNewGame"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
