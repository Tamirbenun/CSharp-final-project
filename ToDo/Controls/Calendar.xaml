<UserControl x:Class="ToDo.Controls.Calendar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToDo.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="750">
    <Border Background="White" Padding="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel>
                <TextBlock Text="Calendar" FontSize="30" FontWeight="SemiBold" Foreground="Black"/>
            </StackPanel>

            <Calendar Grid.Row="1" VerticalAlignment="Center" Height="580" CalendarButtonStyle="{StaticResource StyleCalanderButton}" CalendarDayButtonStyle="{StaticResource StyleCalanderDayButton}" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="Black"/>
        </Grid>
    </Border>
</UserControl>
